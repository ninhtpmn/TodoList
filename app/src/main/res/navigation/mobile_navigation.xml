<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.todolist.ui.task.TaskFragment"
        android:label="@string/menu_task"
        tools:layout="@layout/fragment_task" >
        <action
            android:id="@+id/action_nav_home_to_newTaskFragment"
            app:destination="@id/newTaskFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_share"
        android:name="com.example.todolist.ui.share.ShareFragment"
        android:label="@string/menu_share"
        tools:layout="@layout/fragment_share" />
    <dialog
        android:id="@+id/newTaskFragment"
        android:name="com.example.todolist.ui.newTask.NewTaskDialogFragment"
        android:label="fragment_blank"
        tools:layout="@layout/dialog_fragment_new_task" />

</navigation>